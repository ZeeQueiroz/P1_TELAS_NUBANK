<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/valorTransf"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".valorTransf">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual o valor da sua transferência?"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor disponível em conta R$ 100.000,00"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="26dp"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="R$ 0,00"
        android:textSize="27dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botaoProsseguir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/direito"
        app:tint="#000000"
        android:layout_gravity="right"
        android:layout_marginTop="250dp"
        android:layout_marginRight="30dp"/>

</LinearLayout>